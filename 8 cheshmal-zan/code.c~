#include <mega32.h>
#include <delay.h>

void main(void)
{
    DDRC = 0xFF; //  дўнг Бж—  C »е Џдж«д ќ—жћн

    while (1)
    {
        PORTC = 0xFF;  // —ж‘д Ш—ѕд еге LEDе«
        delay_ms(50); //  «ќн— ??? гнбнЭЋ«дне

        PORTC = 0x00;  // ќ«гж‘ Ш—ѕд еге LEDе«
        delay_ms(50); //  «ќн— ??? гнбнЭЋ«дне
    }
}
